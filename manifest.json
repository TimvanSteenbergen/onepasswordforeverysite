{
  "manifest_version": 2,
  "name": "OnePasswordForEverySite Browser extension",
  "description": "Hi. I'm Opfes. I am a tool that help you to log in to any site. You will have to remember one password only. You will have maximum password safety.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icons\/opfes_19.png",
    "default_popup": "OnePasswordForEverySiteApp.html",
    "default_title": "Hi. I'm Opfes. I am a tool help you log in everywhere.\nYou will only need to remember one password.\nYou will have maximum password safety.\n"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "CustomerBrowser.js",
        "UserData.js",
        "PopupForm/Factory.js",
        "SiteService.js",
        "Site.js",
        "SHA512.js",
        "PopupForm/AbstractForm.js",
        "PopupForm/Login.js",
        "PopupForm/UnknownSite.js",
        "PopupForm/NoUserData.js",
        "PopupForm/NewAndVerifyPassword.js",
        "PopupForm/OldNewAndVerifyPassword.js"
      ],
      "css": [
        "css/PopupForm.css"
      ]
    },
    {
      "matches": [
        "*://*.opfes.com/runtests.html"
      ],
      "js": [
        "tests/SiteServiceTests.js"
      ],
      "css": [
        "css/SiteServiceTests.css"
      ]
    }
  ],
  "icons": {
    "19": "icons\/opfes_19.png",
    "32": "icons\/opfes_32.png",
    "48": "icons\/opfes_48.png",
    "96": "icons\/opfes_96.png"
  },
  "web_accessible_resources": [
    "icons\/opfes_19.png",
    "icons\/opfes_32.png",
    "icons\/opfes_19_unset_opfes.png"
  ],
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ]
}
